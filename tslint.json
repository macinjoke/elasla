{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [
      true, {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all"
      }
    ],
    "no-console": {
      "severity": "warning"
    },
    "no-unused-variable": [true, {"ignore-pattern": "^_"}],
    "interface-name": false,
    "object-literal-sort-keys": false
  }
}
